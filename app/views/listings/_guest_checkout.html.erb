<div class="row">
    <div class="span7 box">
        <h1>Checkout</h1>
        <div class="span6 offset1">
            <%= form_tag({:controller => 'rentals', :action => 'create', :method => 'post'}, {:id => 'cc-form'}) do %>
            <p>
              I already have an account.
              <%= link_to('Sign me in', user_session_path) %>
            </p>
            <div>
              <label>Name on Card</label>
              <input type="text" id="card-name" name="cardName" autocomplete="off" />
            </div>
            <div>
              <label>Card Number</label>
              <input type="text" id="card-number" name="cardNumber" autocomplete="off"/>
            </div>
            <div>
              <label>Expiration</label>
              <%= select_tag(:"guest-expiration_month", options_for_select(1.upto(12).map{ |num| [num,num] }), :class => 'span1', :id => 'guest-expiration_month') %>
              <%= select_tag(:"guest-expiration_year", options_for_select(Time.now.year.upto(Time.now.year+10).map{ |num| [num,num] }), :class => 'span1', :id => 'guest-expiration_year') %>
            </div>
            <div>
              <label>Card Verification Code (CVV)</label>
              <input type="text" id="card-cvc" name="cardCvc" class="span1" autocomplete="off" maxlength="4" />
            </div>
            <div>
              <label>Postal Code</label>
              <input type="text" id="guest-postal_code" name="guest-postal_code" class="span1" autocomplete="off" />
            </div>
            <div>
              <%= label_tag(:"guest-email_address", 'Email', :class => 'control-label') %>
              <%= text_field_tag(:"guest-email_address", nil,  :class => 'span5', :id => 'guest-email_address') %>
            </div>
            <%= hidden_field_tag(:listing_id, @listing.id) %>
            <div>
              <%= submit_tag 'Rent', class: 'btn-primary' %>
            </div>
            <% end %>         
            <a href="https://www.verygoodsecurity.com"><img src="https://www.verygoodsecurity.com/theme/ico/favicon/favicon-32x32.png" alt="Secured by vgs"></a>
        </div>
    </div>
</div>
